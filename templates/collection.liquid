<section role="main" class="collection-page general-page">
  <header class="grid">
    <div class="grid__item one--whole desk--one-half">
      <h3 class="general-title">{{collection.name}}</h3>
    </div><!--
    --><div class="grid__item one--whole desk--one-half sorting">
      {% include 'sortable' with 'collection_sorting' %}
    </div>
  </header>

  <div class="page-content grid">
    {% paginate collection.products.order_by_name_asc by 12 %}
    {% for product in paginate.collection %}
    {% include 'list_product' with 'page' %}
    {% endfor %}
    {% endpaginate %}
  </div>
</section>
