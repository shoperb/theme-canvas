{% if menu.links.any? or menu.children.any? %}
<ul{% if link.children.any? %} class="menu-dropdown"{% endif %}>
  {% assign collection = menu.root_links %}
  {% if menu.children.any? %}
  {% assign collection = menu.children %}
  {% endif %}

  {% for link in collection %}
  <li{% if link.children.any? %} class="with-child"{% endif %}>
    {% if link.url %}<a href="{{link.url}}"{% if link.style == 'custom' %} target="_blank"{% endif %}>{% else %}<span>{% endif %}{{link.name}}{% if link.url %}</a>{% else %}</span>{% endif %}
    {% if link.children.any? %}<i class="icon-full-arrow-down"></i>{% endif %}
    {% if link.children.any? %}<i class="icon-arrow-narrow"></i>{% endif %}

    {% if link.children.any? %}
    {% include 'menu' with link %}
    {% endif %}

  </li>
  {% endfor %}
</ul>
{% endif %}
