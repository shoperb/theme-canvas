{% if paginate.pages > 1 %}
<div class="pagination">

  <ul>
    {% if paginate.previous %}
      <li class="prev"><a href="{{paginate.previous.url}}"><span class="glyph arrow-left"></span>{{'navigation.previous' | t}}</a></li>
    {% else %}
      <li class="prev disabled"><a href="#" onclick="return false;"><span class="glyph arrow-left"></span>{{'navigation.previous' | t}}</a></li>
    {% endif %}

    {% for part in paginate.parts %}
      {% if part.is_link %}
        <li>{{ part.title | link_to: part.url }}</li>
      {% else %}
        {% if part.title == '&hellip;' %}
        <li class="ellipsis disabled"><a href="#" onclick="return false;">{{ part.title }}</a></li>
        {% else %}
        <li class="active">{{part.title}}</li>
        {% endif %}
      {% endif %}
    {% endfor %}

    {% if paginate.next %}
      <li class="next"><a href="{{paginate.next.url}}">{{'navigation.next' | t}}<span class="glyph arrow-right"></span></a></li>
    {% else %}
      <li class="next disabled"><a href="#" onclick="return false;">{{'navigation.next' | t}}<span class="glyph arrow-right"></span></a></li>
    {% endif %}
  </ul>

</div>
{% endif %}