{% assign default_variant = product.available_variants.first %}
{% assign quantity = product.attributes['quantity-description'].value %}

<div class="main-container product-page">
  <article class="product row" itemscope="" itemtype="http://schema.org/Product" data-product-details data-currency-symbol="{{shop.currency.symbol}}" data-currency-code="{{shop.currency.code}}">
    <meta itemprop="url" content="{{url.current_url}}" />
    <meta itemprop="image" content="{{product.image.size-2048.url}}" />

    <div class="ui grid">
      <div class="eight wide column">
        <div data-position="thumbs" class="thumbs">
          {% for image in product.images %}
          <div class="thumb{% if forloop.first == true %} active{% endif %}">{{image.admin_small.url | image_tag: product.name}}</div>
          {% endfor %}
        </div>

        <div data-position="photos" class="photos">
          <div class="container clearfix">

            {% for image in product.images %}
            <a class="photo" href="{{image.size-2048.url}}" data-zoom="{{image.size-2048.url}}" rel="gallery">
              <img src="{{image.size-480.url}}" alt="{{product.name}}}}">
            </a>
            {% endfor %}

          </div>
        </div>
      </div>

      <div class="eight wide column">
        <div data-position="title-vendor">
          <h1 class="page-title" itemprop="name">{{product.name}}</h1>

          <div class="category">{{product.category.name}}</div>

          {% if product.description.size > 0 %}
          <div data-position="description">
            <div class="description">{{product.description}}</div>
          </div>
          {% endif %}

          <div data-position="prices">
            <div class="prices">
              <div itemprop="offers" itemscope="" itemtype="http://schema.org/Offer">
                <meta itemprop="priceCurrency" content="{{shop.currency.code}}">
                <link itemprop="availability" href="http://schema.org/{% if product.available? %}InStock{% else %}OutOfStock{% endif %}">
                <span class="actual-price money" data-current-price itemprop="price" data-currency="{{shop.currency.code}}">{{default_variant.current_price | money}}</span>

                {% if default_variant.discount? %}
                <span class="compare-price">
                  <span class="money" data-current-discount-price data-currency="{{shop.currency.code}}">{{default_variant.price | money}}</span>
                </span>
                {% endif %}
              </div>
            </div>
          </div>

          <div data-position="cart-form">
            {% include 'product_form' %}
          </div>
        </div>
      </div>
    </div>
  </article>
</div>

<div class="share-this">
  <div class="main-container">
    {% include 'share_this' with 'full' %}
  </div>
</div>

<div class="main-container">
  {% include 'recommended_products' %}
</div>

