{% comment %}
{% endcomment %}

<section data-section-id="{{section.id}}" data-type="product" class="image-size-medium not-full-screen">
  <div class="image">
    <img src="http://static.fjcdn.com/pictures/Joker+cat_ff8f4c_3504798.jpg">
  </div>
  <div class="product">
    <h2 class="product-title">Image with text</h2>
    <div class="product-vendor">Vendor</div>
    <div class="product-price">14.95€</div>

    <div class="product-variants">
      Variant selectors
    </div>

    <div class="product-form grid">
      <div class="product-quantity">
        <label>Quantity</label>
        <input>
      </div>
      <div class="product-button">
        <button class="button primary">Sold out</button>
      </div>
    </div>

    <div class="product-description">
      This area is used to describe your product’s details. Tell customers about the look, feel, and style of your product. Add details on color, materials used, sizing, and where it was made.
    </div>

    <div class="product-share">
      share product options?
    </div>
  </div>

</section>
