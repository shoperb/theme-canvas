{% if date %}
  {% if shop.current_locale == 'en' %}
    {% if long_date %}
      {{date | date: "%B %-d %Y"}}
    {% else %}
      {{date | date: "%b %-d %Y"}}
    {% endif %}
  {% else %}
    {{ date | date: "%-d" }}.
    {% if long_date %}
      {{date | date: "%B" | t}}
    {% else %}
      {{date | date: "%b" | t}}
    {% endif %}
    {{date | date: "%Y"}}
  {% endif %}
{% endif %}
