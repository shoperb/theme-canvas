                              <li style="color: black; padding: 3px 10px;">
                                {{order.shipping_address.full_address}}
                              </li>
                              <li style="color: black; padding: 3px 10px;">
                                {{order.shipping_address.city_state_with_zip}}
                              </li>
                              <li style="color: black; padding: 3px 10px;">
                                {{order.shipping_address.country_name}}
                              </li>
                              <li style="color: black; padding: 3px 10px;">
                                {{order.shipping_address.phone}}
                              </li>
                            </ul>
                          </td>
                          <td width="20"></td><td style="vertical-align: top;" width="180">
                            <ul style="margin: 0; padding: 0; list-style: none; font-size: 13px; line-height: 16px;">
                              <li style="background: black; height: 28px; line-height: 28px; color: #ffffff; font-weight: bold; padding: 3px 10px; margin: 0 0 10px 0;">
                                {{"public.invoice.shop"| t}}
                              </li>
                              <li style="color: black; padding: 3px 10px;">
                                {{ shop.address.company }}
                              </li>
                              <li style="color: black; padding: 3px 10px;">
                                {{ shop.address.address1 }}
