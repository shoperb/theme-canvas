                    </table>

                    {% assign show_sku = 3 %}
                    {% for item in order.items %}
                      {% if item.sku != blank %}
                      {% assign show_sku = 4 %}
                      {% endif %}
                    {% endfor %}

                    <table style="margin: 0 0 20px 0; font-size: 13px;" border="0" cellpadding="0" cellspacing="0" width="100%">
                      <thead>
                        <tr style="background: #000000; line-height: 26px; height: 26px; color: #ffffff;">
                          {% if show_sku == 4 %}
                          <th style="padding: 0 10px; text-align: left;">
                               {{"public.invoice.sku"| t}}
                          </th>
                          {% endif %}
                          <th style="padding: 0 10px; text-align: left;">
                            {{"public.invoice.product"| t}}
                          </th>
                          <th style="padding: 0 20px; text-align: center;">
                            {{"public.invoice.quantity"| t}}
                          </th>
                          <th style="padding: 0 10px; text-align: right;">
                            {{"public.invoice.price"| t}}
                          </th>
                          <th style="padding: 0 10px; text-align: right;">
                            {{"public.invoice.total"| t}}
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for item in order.items %}
                        <tr>
                          {% if show_sku == 4 %}
                          <td style="line-height: 28px; padding: 0 10px; text-align: left;">
                              {{ item.sku }}
                          </td>
                          {% endif %}
                          <td style="line-height: 28px; padding: 3px 10px; text-align: left;">
                            {{ item.name }}
                            {% if item.attributes %}<div style="padding: 0 0 0 20px; font-size: 12px; line-height: 1">{% endif %}
                            {% for attr in item.attributes %}
                            {% if forloop.index != 1 %}, {% endif %}
                            {{ attr.value }}
                            {% endfor %}
                            {% if item.attributes %}</div>{% endif %}
                          </td>
                          <td style="line-height: 28px; padding: 3px 20px; text-align: center;">
                            {{ item.quantity }}
                          </td>
                          <td style="line-height: 28px; padding: 3px 10px; text-align: right;">
                            {{ item.price | money_with_cents }}
                          </td>
                          <td style="line-height: 28px; padding: 3px 10px; text-align: right;">
                            {{ item.total | money_with_cents }}
                          </td>
                        </tr>
                      {% endfor %}
                      </tbody>
                      <tfoot>

                        {% if order.bruto_discount %}
                          <td colspan="{{show_sku}}" style="line-height: 28px; text-align: right; padding: 0 10px; border-top: 3px solid #000000;">
                            {{'email.subtotal_wo_discount' | t}}
                          </td>
                          <td style="line-height: 28px; padding: 0 10px; text-align: right; border-top: 3px solid #000000;">
                            {{order.subtotal_wo_discount | money_with_cents}}
                          </td>
                          <td colspan="{{show_sku}}" style="line-height: 28px; text-align: right; padding: 0 10px; border-top: 3px solid #000000;">
                            {{'email.discount' | t}}
                          </td>
                          <td style="line-height: 28px; padding: 0 10px; text-align: right; border-top: 3px solid #000000;">
                            {{order.bruto_discount | money_with_cents}}
                          </td>
                        {% endif %}

                        <tr>
                          <td colspan="{{show_sku}}" style="line-height: 28px; text-align: right; padding: 0 10px; border-top: 3px solid #000000;">
                            {{"public.invoice.price_total"|t}}
                          </td>
                          <td style="line-height: 28px; padding: 0 10px; text-align: right; border-top: 3px solid #000000;">
                            {{order.subtotal | money_with_cents}}
                          </td>
                        </tr>
                        <tr>
                          <td colspan="{{show_sku}}" style="line-height: 28px; text-align: right; padding: 0 10px;">
                            {{"public.invoice.tax"| t}}
                          </td>
                          <td style="line-height: 28px; padding: 0 10px; text-align: right;">
                            {{order.total_taxes | money_with_cents}}
                          </td>
                        </tr>
                        <tr>
                          <td colspan="{{show_sku}}" style="line-height: 28px; text-align: right; padding: 0 10px;">
                            {{"public.invoice.price_shipping"| t}}
                          </td>
                          <td style="line-height: 28px; padding: 0 10px; text-align: right;">
                            {{order.total_shipping | money_with_cents}}
                          </td>
                        </tr>
                        <tr>
                          <td colspan="{{show_sku}}" style="line-height: 28px; font-weight: bold; border-top: 3px solid #000000; padding: 5px 10px 0 10px; text-align: right;">
                            {{"public.invoice.total" | t}}
                          </td>
                          <td style="line-height: 28px; padding: 5px 10px 0 10px; text-align: right; font-weight: bold; border-top: 3px solid #000000;">
                            {{order.total | money_with_cents}}
                          </td>
                        </tr>
                      </tfoot>
                    </table>


                      <table style="margin: 0 0 60px 0; font-size: 13px;" border="0" cellpadding="0" cellspacing="0" width="100%">
                      <tbody>
                        <tr>
                          <td style="line-height: 20px; text-align: left; width: 140px; padding: 5px;">
                            <strong>
                              {{"public.invoice.payment_method"| t}}
                            </strong>
                          </td>
                          <td style="line-height: 20px; text-align: left; padding: 5px;">
                              {{ order.payment_method_name }}
                          </td>
                        </tr>
                        {% if order.payment_method.invoice_instructions != blank %}
                        <tr>
                          <td style="line-height: 20px; text-align: left; width: 140px; padding: 5px;">
                            <strong>
                              {{"public.invoice.payment_instructions"| t}}
                            </strong>
                          </td>
                          <td style="line-height: 20px; text-align: left; padding: 5px;">
                            {{ order.payment_method.invoice_instructions }}
                          </td>
                        </tr>
                        {% endif %}
                        {% if order.notes != blank %}
                        <tr>
                          <td style="line-height: 20px; text-align: left; width: 140px; padding: 5px;">
                            <strong>
                              {{"public.invoice.order_notes"| t}}
                            </strong>
                          </td>
                          <td style="line-height: 20px; text-align: left; padding: 5px;">
                            {{ order.notes }}
                          </td>
                        </tr>
                        {% endif %}
                      </tbody>
                    </table>

