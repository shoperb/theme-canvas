{% assign menu = menus[section.settings.menu] %}

<header id="main-header" class="grid" data-section-id="{{section.id}}">
  <div class="background"></div>

  <div class="grid__item palm--one-whole{% if section.settings.logo_alignment != 'center' %} desk--one-quarter{% endif %}">
    <div class="logo">
      <a href="/">
        {% if section.settings.logo != blank %}
        <img src="{{section.settings.logo}}" title="{{shop.name}}" style="max-width: {{section.settings.logo_max_width}}px;">
        {% else %}
        {{shop.name}}
        {% endif %}
      </a>
    </div>
  </div><!--
  --><div class="grid__item palm--one-whole{% if section.settings.logo_alignment != 'center' %} desk--three-quarters{% endif %}">
    <div class="grid">
      {% if menu.links.size != 0 and menu != blank %}
      <div class="grid__item palm--one-whole desk--two-thirds">
        <nav role="navigation" class="main-menu">
          {% include 'menu' with menu %}
        </nav>
      </div><!--
      -->{% endif %}<div class="grid__item palm--one-whole {% if menu.links.size == 0 or menu == blank %}desk--one-whole{% else %}desk--one-third{% endif %}">
        <div class="actions">
          <div data-item="main">
            {% include 'language_switcher' %}
          </div>
          <div class="search" data-item="main" data-toggle="search">
            {{'search' | t}}
            <span class="icon-search"></span>
          </div>
          <div class="account" data-item="main" data-toggle="account">
            {{'account' | t}}
            <span class="icon-account"></span>
          </div>
          <div class="cart-container" data-item="main">
            <div class="cart">
              <div class="show-for-medium-up">
                <a class="cart-link" href="{{url.cart}}">
                  {{'header.cart' | t}}
                  {% if cart.quantity > 0 %}
                  <span class="number-wrapper">
                    (<span class="number">{{ cart.quantity }}</span>)
                  </span>
                  {% endif %}
                  <span aria-hidden="true" class="glyph cart"></span>
                </a>
              </div>

              {% comment %}
              <div class="show-for-small hide-for-ie9-down">
                <div class="recently-added-mask hide"></div>
                <div class="recently-added mobile">
                  <a aria-hidden="true" class="close glyph cross"></a>


                  <div class="row">
                    <div class="columns">
                      <p><strong class="all-caps">{{'header.recently_added' | t}}</strong></p>
                      <p class="mobile-item"></p>
                      <p class="items-count"><a href="{{url.cart}}"><span class="number">0</span> {{'header.items' | t}}</a></p>
                      <p><strong class="all-caps">{{'header.total' | t}} <span class="total-price" style="margin-left:5px;">$0.00</span></strong></p>
                    </div>
                  </div>

                  <div class="row">
                    <div class="checkout columns">
                      <a class="button" href="{{url.cart}}">{{'header.checkout' | t}}</a>
                    </div>
                  </div>

                  <div class="error">
                    <p>{{'header.unavailable_item' | t}}</p>
                  </div>

                </div>
              </div>
              {% endcomment %}

            </div>
          </div>

          <div class="search-container hidden">
            <form  action="{{url.search}}" method="get" role="search">
              <input name="query" type="text" placeholder="{{'search.keyword' | t}}">
              <button class="icon-search"></button>
            </form>
            <span class="icon-cross" data-toggle="close">x</span>
          </div>

          <div class="account-container hidden">
            {% if account.logged_in? %}
            <a href="{{url.account}}">{{'account.view' | t}}</a> {{'general.or' | t}} <a href="{{url.logout}}">{{'account.logout' | t}}</a>
            {% else %}
            <a href="{{url.login}}">{{'account.login' | t}}</a> {{'general.or' | t}} <a href="{{url.signup}}">{{'account.register' | t}}</a>
            {% endif %}
            <span class="icon-cross" data-toggle="close">x</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>