{
  "name": "Slideshow",
  "max_blocks": 4,
  "settings": [
    {
      "type": "toggle",
      "handle": "auto_rotate",
      "default": false
    },
    {
      "type": "select",
      "handle": "animation_speed",
      "default": 3,
      "options": [
        {
          "value": 2,
          "handle": "2"
        },
        {
          "value": 3,
          "handle": "3"
        },
        {
          "value": 4,
          "handle": "4"
        },
        {
          "value": 5,
          "handle": "5"
        }
      ]
    },
    {
      "type": "select",
      "handle": "section_width",
      "default": "full-width",
      "options": [
        {
          "value": "full-width",
          "handle": "full-width"
        },
        {
          "value": "limited",
          "handle": "limited"
        }
      ]
    },
    {
      "type": "select",
      "handle": "section_height",
      "default": "medium",
      "options": [
        {
          "value": "small",
          "handle": "small"
        },
        {
          "value": "medium",
          "handle": "medium"
        },
        {
          "value": "large",
          "handle": "large"
        }
      ]
    },
    {
      "type": "select",
      "handle": "text_size",
      "default": "medium",
      "options": [
        {
          "value": "medium",
          "handle": "medium"
        },
        {
          "value": "large",
          "handle": "large"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image_slide",
      "settings": [
        {
          "type": "image",
          "handle": "image"
        },
        {
          "type": "select",
          "handle": "image_alignment",
          "default": "middle",
          "options": [
            {
              "value": "top-left",
              "handle": "top-left"
            },
            {
              "value": "top-middle",
              "handle": "top-middle"
            },
            {
              "value": "top-right",
              "handle": "top-right"
            },
            {
              "value": "middle-left",
              "handle": "middle-left"
            },
            {
              "value": "middle",
              "handle": "middle"
            },
            {
              "value": "middle-right",
              "handle": "middle-right"
            },
            {
              "value": "bottom-left",
              "handle": "bottom-left"
            },
            {
              "value": "bottom-center",
              "handle": "bottom-center"
            },
            {
              "value": "bottom-right",
              "handle": "bottom-right"
            }
          ]
        },
        {
          "type": "text",
          "handle": "heading"
        },
        {
          "type": "richtext",
          "handle": "subheading"
        },
        {
          "type": "text",
          "handle": "slide_link"
        }
      ]
    },
    {
      "type": "video_slide",
      "settings": [
        {
          "type": "text",
          "handle": "video"
        },
        {
          "type": "text",
          "handle": "heading"
        },
        {
          "type": "richtext",
          "handle": "subheading"
        }
      ]
    }
  ]
}
